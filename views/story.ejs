<html>
    <head>
        <title>Make Your Garden Grow</title>
        <link rel="stylesheet" href="/style.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.6.0/p5.js"></script>
        <script type="text/javascript" src="../sketches/story1-sketch.js"></script>
        <script type="text/javascript" src="../scripts/story1-script.js"></script>
        
    </head>
    <body style="background: linear-gradient(180deg, rgba(27,15,4,1) 0%, rgba(2,27,12,1) 100%);; overflow-x:hidden">
        <% if(volume.valueOf() == "on".valueOf()) { %>
            <iframe src="../audio/silence.mp3" allow="autoplay" id="audio" style="display: none"></iframe>
            <audio class="music" id="story1-music" autoplay>
                <source src="../audio/2.mp3" type="audio/mp3">
            </audio>
        <% } %>
        <div id="right-roots-1"></div>
        <div id="left-roots-1"></div>
        <div id="right-vines-1"></div>
        <div class="story-content">
            <div class="story-frame" id="story-frame-1">
                <h2 class="story-line-1">You’ve been a fool and so have I</h2>
                <h2 class="story-line-2">So come and be my wife</h2>
                <% images.forEach((image) => { %>
                    <% if(image.panel == 1) { %>
                    <div>
                        <%let randX = Math.floor(Math.random()*100)%>
                        <%let randY = Math.floor(Math.random()*100)%>
                        <%let randOpacity = 0.5+Math.floor(Math.random()*50)%>
                        <img class="story-img" style="left:<%=randX%>%; top: <%=randY%>%; opacity:<%=randOpacity%>%"src="<%=image.file%>" alt="<%=image.name%>">
                    </div>
                    <% } %>
                <% }) %>
            </div>
            <div class="story-frame" id="story-frame-2">
                <h2 class="story-line-1">And let us try before we die</h2>
                <h2 class="story-line-2">To make some sense of life</h2>
                <% images.forEach((image) => { %>
                    <% if(image.panel == 2) { %>
                    <div>
                        <%let randX = Math.floor(Math.random()*100)%>
                        <%let randY = Math.floor(Math.random()*100)%>
                        <%let randOpacity = 0.5+Math.floor(Math.random()*50)%>
                        <img class="story-img" style="left:<%=randX%>%; top: <%=randY%>%; opacity:<%=randOpacity%>%"src="<%=image.file%>" alt="<%=image.name%>">
                    </div>
                    <% } %>
                <% }) %>
            </div>
            <div class="story-frame" id="story-frame-3">
                <h2 class="story-line-1">We’re neither pure nor wise nor good</h2>
                <h2 class="story-line-2">we’ll do the best we know</h2>
                <% images.forEach((image) => { %>
                    <% if(image.panel == 3) { %>
                    <div>
                        <%let randX = Math.floor(Math.random()*100)%>
                        <%let randY = Math.floor(Math.random()*100)%>
                        <%let randOpacity = 0.5+Math.floor(Math.random()*50)%>
                        <img class="story-img" style="left:<%=randX%>%; top: <%=randY%>%; opacity:<%=randOpacity%>%"src="<%=image.file%>" alt="<%=image.name%>">
                    </div>
                    <% } %>
                <% }) %>
            </div>
            <div class="story-frame" id="story-frame-4">
                <h2 class="story-line-1">We’ll build our house and chop our wood...</h2>
                <% images.forEach((image) => { %>
                    <% if(image.panel == 4) { %>
                    <div>
                        <%let randX = Math.floor(Math.random()*100)%>
                        <%let randY = Math.floor(Math.random()*100)%>
                        <%let randOpacity = 0.5+Math.floor(Math.random()*50)%>
                        <img class="story-img" style="left:<%=randX%>%; top: <%=randY%>%; opacity:<%=randOpacity%>%"src="<%=image.file%>" alt="<%=image.name%>">
                    </div>
                    <% } %>
                <% }) %>
            </div>
            <a class="story-continue story-line-2" href="/middle-garden?volume=<%=volume%>">
                [Continue...]
            </a>
        </div>
    </body>
</html>